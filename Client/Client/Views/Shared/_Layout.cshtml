<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" href="/assets/blogger.png"/>
    <title>@ViewData["title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Blog" asp-action="Index">Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blog" asp-action="Index">All blogs</a>
                    </li>
                    @{
                        if (ViewData["allow"] == "yes")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Blog" asp-action="AddBlog">Add blog</a>
                            </li>
                        }
                    }
                </ul>
                    <div class="d-flex" style="color: white; margin-right:3px">
                    @{
                        if (@ViewData["username"] != null)
                        {
                            <h5>@ViewData["username"]</h5>
                            <a style="margin-left: 10px;" class="nav-link" asp-controller="User" asp-action="Logout"><h4><i class="bi bi-box-arrow-right"></i></h4></a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="User" asp-action="Login">Login</a>
                        }
                    }
                    </div>
            </div>
        </div>
    </nav>
        @RenderBody()
    <script src="/assets/plugins/jQuery/jquery-1.12.4.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>