@model Client.DTOs.LoginUserDTO
@{
    Layout = null;
}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Login</title>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/assets/style.css">
        <link rel="icon" href="/assets/blogger.png"/>
    </head>
    <body>
        <div class="background">
            <div class="shape"></div>
            <div class="shape"></div>
        </div>
        <form method="post">
            <h3>Login</h3>
            <label asp-for="Username"></label>
            <input type="text" placeholder="Enter your username" asp-for="Username">
            <span asp-validation-for="Username" class="text-danger"></span>
        <label asp-for="Password"></label>
        <input type="password" placeholder="Enter your password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
            <button>Login</button>
            <a class="btn" asp-asp-controller="User" asp-action="Register">Register</a>
        @{
            if (ViewData["error"] != null || TempData["success"] != null)
            {
                <br />
                <span class="text-danger">@ViewData["error"]</span>
                <span class="message text-success">@TempData["success"]</span>
            }
        }
        </form>
    <script src="/assets/plugins/jQuery/jquery-1.12.4.min.js" type="text/javascript"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        setTimeout(() => {
            document.getElementsByClassName("message")[0].style.display = "none";
        }, 5000);
    </script>
    </body>
</html>